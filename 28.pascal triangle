#include <stdio.h>
#define MAX 10 

void printPascalTriangle(int n) {
    int arr[MAX][MAX] = {0};

    for (int line = 0; line < n; line++) {
        for (int i = 0; i <= line; i++) {
            if (i == 0 || i == line)
                arr[line][i] = 1;
            else
                arr[line][i] = arr[line-1][i-1] + arr[line-1][i];
            printf("%d ", arr[line][i]);
        }
        printf("\n");
    }
}

int main() {
	printf("192211645 G.PRIYANKAREDDY\n");
    int n = 5;
    printPascalTriangle(n);

    return 0;
}
